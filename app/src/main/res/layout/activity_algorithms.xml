<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButtonDisplay"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButtonDisplay"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSilnia"
                style="@style/NumberButtonStyle"
                android:text="n!"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvPier"
                style="@style/NumberButtonStyle"
                android:text="√"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvLog"
                style="@style/NumberButtonStyle"
                android:text="ln"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvCube"
                style="@style/NumberButtonStyle"
                android:text="n³"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvFib"
                style="@style/NumberButtonStyle"
                android:text="Fibonacci"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvPerfect"
                style="@style/NumberButtonStyle"
                android:text="Perfect"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPi"
                style="@style/NumberButtonStyle"
                android:text="Pi"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvE"
                style="@style/NumberButtonStyle"
                android:text="e"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvDivideByOne"
                style="@style/NumberButtonStyle"
                android:text="1/n"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvMod"
                style="@style/NumberButtonStyle"
                android:text="|n|"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/ButtonColor">

            <TextView
                android:id="@+id/tvSin"
                style="@style/NumberButtonStyle"
                android:text="Sin"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvCos"
                style="@style/NumberButtonStyle"
                android:text="Cos"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvTan"
                style="@style/NumberButtonStyle"
                android:text="Tan"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvCtg"
                style="@style/NumberButtonStyle"
                android:text="Ctg"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCal"
                style="@style/NumberButtonStyle"
                android:text="Cal"
                android:textColor="@color/numberButtoncolorchange"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvBin"
                style="@style/NumberButtonStyle"
                android:text="Bin"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvOct"
                style="@style/NumberButtonStyle"
                android:text="Oct"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />


            <TextView
                android:id="@+id/tvHex"
                style="@style/NumberButtonStyle"
                android:text="Hex"
                android:textColor="@color/numberButtoncolor"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>






























